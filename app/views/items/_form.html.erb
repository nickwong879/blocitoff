<%= form_for [@user, @items.new] do |f| %>

      	<div class="form-group">
			<%= f.text_field :body, class: 'form-control', placeholder: "Enter your item description here" %>		
		</div>

		<div class="input-group date">
			<%= f.datetime_field :due_date, 'data-behaviour' => 'datepicker', remote: true, class: 'datepicker', placeholder:"dd-mm-yyyy" %>
		</div>
	</br>

		<div class="form-group">
			<%= f.submit "Add item", class: 'btn btn-success' %>
		</div>

<% end %>

<script type="text/javascript">$('.datepicker').datepicker({format:'dd/mm/yyyy', autoclose: true});</script>