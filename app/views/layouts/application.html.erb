<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
		<div class= "container">

			<nav class="navbar navbar-inverse navbar-static-top">
				<div class="container">
					
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand"><% link_to "Blocitoff", root_path %>Blocitoff</a>
					</div>
					
					<div id="navbar" class="navbar-collapse collapse">
						<ul>
						<ul class="nav navbar-nav">
							<li class="active"><%= link_to "Home", root_path %></li>
							<li><%= link_to "About", welcome_about_path %></li>
							<li><%= link_to "Contact", welcome_contact_path %></li>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Index<span class="caret"></span></a>
								<ul class="dropdown-menu" role="menu">
									<li><%= link_to "Users", users_index_path %></li>
									<li><%= link_to "Items", items_index_path %></li>
									<li class="divider"></li>
									<li class="dropdown-header">Sub-submenu</li>
									<li><a href="#">Menu-item 3</a></li>
									<li><a href="#">Menu-item 4</a></li>
								</ul>
							</li>
						</ul>
									
						<p class="navbar-text pull-right">
						<% if current_user %>
						<%= image_tag(current_user.avatar.tiny.url) if current_user.avatar? %>
							Hello <%= current_user.name %>!
							<%= link_to users_show_path, class: 'btn btn-default btn-xs' do %>
								<span class="glyphicon glyphicon-user"></span>
							<% end %> 
							<%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-default btn-xs' do %>
								<span class="glyphicon glyphicon-forward"></span>
							<% end %>
						<% else %>
							<%= link_to "Sign In", new_user_session_path %> or
							<%= link_to "Sign Up", new_user_registration_path %>  
						<% end %>
						</p>
					</div>

				</div>			
			</nav>
		</div>

<div class="container">
<% if flash[:notice] %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:notice] %>
	</div>
<% elsif flash[:error] %>
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:notice] %>
	</div>
<% elsif flash[:error] %>
	<div class="alert alert-warning">
		<button type="button" class="close" data-dismiss-"alert">&times;</button>
		<%= flash[:notice] %>
	</div>
	<% end %>
</div>

<%= yield %>

</body>
</html>
